@import '../../config/config.styl';

.modal_bk
  position fixed
  width 100%
  height 100%
  background-color rgba(0,0,0,0.2)
.modal_container
  position absolute
  width 80vw
  height 30vh
  background-color #abffc8
  margin auto
  left 0
  right 0
  top 0
  bottom 0
  transform translateY(-10vh)
  border-radius 2rem
  box-shadow  0 0 1rem
  .modal-head
    font-size 1.4rem
    margin-top 0.5rem
    padding-bottom 0.5rem
    border-bottom 1px solid #d8dbf5
  .modal-content
    margin-top 0.5rem
    font-size 1.2rem
  .modal-bottom
    position absolute
    bottom 0
    width 100%
    height 2rem
    padding-top 0.5rem
    border-top 1px solid #d8dbf5
    margin-bottom 0.5rem
    span
      display inline-block
      height 2rem
      line-height 1.8rem
      font-size 1.2rem
      width 7rem
      background-color #6fffbb
      border 1px solid #39ff71
      border-radius 0.3rem
      margin auto
