@import '../../config/config.styl'
.main_container
  height 100%
  position relative
  .bg
    position fixed
    height 100%
    width 100%
    background center
    background-size cover
    filter blur(3px)
    z-index -1
  .head
    height 4vh
    color nav-font
    line-height 4vh
    overflow hidden
    text-align center
    box-shadow 0 0 2px #a6aba6
  .footer
    height 19.2vh
    box-shadow 0 0 2px #a6aba6
  .body
    position relative
    height 76.8vh
    overflow hidden
    .swiper
      height 100%
    //.box
    //  box-shadow inset 0 0 2px #a6aba6
  .box
    z-index 1
    display flex
    flex-direction column
    justify-content center
    align-items center
    position relative
    float left
    height 19.2vh
    width 25vw
    text-align center
    overflow hidden
    .icon
      border 1px solid rgba(0,0,0,0)
      border-radius 0.6rem
      width 16vw
      height 16vw
      background center
      background-size cover
      box-shadow 0 0 0.3rem
    h4
      width 23vw
      height 1.2rem
      margin 0.5rem 0 0 0
      overflow hidden
      color #e5ffdc
      font-weight normal
      text-shadow 0 0 0.1rem
      font-size 0.8rem



