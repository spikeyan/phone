@import '../../config/config.styl';

.login_container
  text-align center
  .title
    margin 1rem 0 0.3rem 5rem
    text-align left
  input[type='text'],input[type='password'],input[type='number']
    height 1.7rem
    border-radius 0.3rem
    border input-border
    text-align center
    outline none
    font-size 1.2rem
    &:focus
      border-radius 0.5rem
      border input-border-focus
  .login_btn
    outline none
    height 2.5rem
    width 15.5rem
    background-color nav-color
    border 1px solid nav-color
    border-radius 0.3rem
    margin-top 2rem
    color nav-font